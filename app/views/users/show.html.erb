<h1>アカウント情報</h1>

  <%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  
  <table>
    <tr>
      <th>ニックネーム</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
  </table>
  
  <%= link_to "編集する", edit_users_path %>
  <%= link_to "戻る", my_page_path %>