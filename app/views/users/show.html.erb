<div class="container" >

  <div class ="row" >
    <div class="mx-auto mb-5">
      <h1>ユーザー情報</h1>
    </div>
  </div>

  <div class ="row" >
    <div class="mx-auto border rounded-lg bg-white p-3">
      <div class="text-center">
        <%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "rounded-circle border" %>
      </div>

        <table class="table table-borderless">
          <tr>
            <th>ニックネーム</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
        </table>
    </div>
  </div>

    <div class="row">
      <div class="mx-auto text-center mt-3">
        <%= link_to "編集する", edit_users_path, class:"btn btn-sm btn-primary" %>
        <%= link_to "戻る", my_page_path, class:"btn btn-sm btn-success" %>
      </div>
    </div>


</div>