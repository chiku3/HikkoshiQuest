<div class="container" >

  <div class ="row" >
    <div class="mx-auto mb-5">
      <h1>ユーザー情報編集</h1>
    </div>
  </div>
  
  <div class ="row" >
    <div class="mx-auto">    
        <%= form_with model: @user, url: users_path, local: true do |f| %>
      <div class="border rounded-lg bg-white p-3">
        <table class="table table-borderless">
          <tr>
            <th><%= f.label :image,"プロフィール画像" %></th>
            <td><%= f.attachment_field :image %></td>
          </tr>
        
          <tr>
            <th><%= f.label :name,"ニックネーム" %></th>
            <td><%= f.text_field :name %></td>
          </tr>
          
          <tr>
            <th><%= f.label :email,"メースアドレス" %></th>
            <td><%= f.email_field :email %></td>
          </tr>
        </table>
      </div>
      
    </div>
  </div>
  
  <div class ="row" >
    <div class="mx-auto mt-3">      
        <%= f.submit "登録する", class:"btn btn-sm btn-success" %>
        <%= link_to "退会する", users_path, method: :delete, data: { confirm: '本当に退会しますか？' }, class:"btn btn-sm btn-danger" %>
    </div>
  </div>
  <% end %>
  
</div>