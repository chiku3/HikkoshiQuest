<h1><%= @user.name %>の冒険</h1>

<%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<p><%= link_to @user.name, users_path %></p>

<% if @quest. blank? %>
  <%= link_to "クエストを登録する", new_quests_path %>
<%end %>

<h2>進行中クエスト</h2>
  <% if @quest. present? %>
    <%= link_to @quest.due_day, quests_path %>
  <% end %>
  
<h2>過去クエスト</h2>
  <% @clear_quests.each do |quest| %>
    <%= link_to quest.clear_day, clear_quest_path(quest) %>
  <% end %>
  