<h1>タスク作成</h1>

<%= form_with model: @task, url: admin_tasks_path, local: true do |f| %>

  <div>
    <%= f.label :title,"件名" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body,"タスク詳細" %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :image,"キャラ画像" %>
    <%= f.attachment_field :image %>
  </div>

  <div>
    <%= f.label :importance,"重要度" %>
    <%= f.text_field :importance %>
  </div>


  <%= f.submit "作成！" %>

<% end %>
